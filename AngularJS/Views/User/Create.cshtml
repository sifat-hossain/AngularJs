
@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/angular.js"></script>
<script src="~/Scripts/AngularJs_Controller/User.js"></script>

<h2>Create</h2>




<div class="form-horizontal" ng-app="mymodule" ng-controller="mycontroller" ng-init="init()">
    <h4>UserInfo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="col-md-12 row">
        <div class="col-md-1">
            <label class="form-label">SL</label>
        </div>
        <div class="col-md-10 row">
            <div class="form-group col-md-3 pl-0 pr-0">
                @Html.Label("Phone", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">
                @Html.Label("Division", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">
                @Html.Label("District", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">
                @Html.Label("UserName", htmlAttributes: new { @class = "control-label col-md-2" })
            </div>
        </div>
    </div>
    <div class="alert alert-danger bold" ng-if="error">
        {{erroMessage}}
    </div>
    <div class="col-md-12 row" ng-repeat="user in userList">
        <div class="col-md-1">
            <input type="text" class="form-control" ng-disabled="true" ng-value="$index+1"/>
        </div>
        <div class="col-md-10 row">
            <div class="form-group col-md-3 pl-0 pr-0">
                <input type="text" class="form-control" ng-model="user.Phone" ng-blur="validatePhone($index)" ng-maxlength="15"  />
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">
                <select class="form-control" ng-model="user.DivisionId" ng-change="GetDistrict($index)"
                        ng-options="division.DivisionId as division.DivisionName for division in Division">
                    <option value="">--Select--</option>
                </select>
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">

                <select class="form-control" ng-model="user.DistrictId" ng-disabled="!user.DivisionId"
                        ng-options="district.DistrictId as district.DistrictName for district in user.DistrictList">
                    <option value="">--Select--</option>
                </select>
            </div>
            <div class="form-group col-md-3 pl-0 pr-0">
                <input type="text" class="form-control" ng-model="user.UserName" />
            </div>
        </div>
        <div class="col-md-1 pt-1 mt-0 pb-1">
            <button class="btn btn-danger " ng-hide="userList.length==1" ng-click="removeItem($index)" value="Delete">
                - Delete
            </button>
        </div>
    </div>
    <div class="offset-md-5 col-md-1 pt-1 mt-0 pb-1 mt-3">
        <button class="btn btn-success" ng-click="addItem()" value="Delete">
            Add +
        </button>
    </div>

    <br />
    <div class="offset-md-5">
        <div class="col-md-10">
            <input type="submit" value="Create" class="btn btn-default btn-primary" ng-click="SaveData()" />
        </div>
    </div>
</div>



